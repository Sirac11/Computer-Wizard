@using MVC.WebUI.Models;
@model IEnumerable<ProductModel>
<div class="row">

    @foreach (var urun in Model)
    {
        
         <div class="col-md-4 mb-3">
             
             <div class="card">
                 <img class="card-img-top" src="/Upload1/@urun.Image" alt="@urun.Name">
                 <div class="card-body">
                     <h4 class="card-title">
                         <a href="/Home/Details/@urun.Id">@urun.Name</a>
                     </h4>
                     <p class="card-text pt-2 description">
                         @urun.Description
                     </p>
                 </div>
                 <div class="card-footer">
                     <small class="text-muted product-price">
                         <i class="fa-usd" aria-hidden="true">₺</i>
                         @urun.Price
                     </small>
                     <a href="/Home/Details/@urun.Id" class="btn btn-primary btn-sm  border-end">
                         <i class="fa-angle-double-right" aria-hidden="true">>></i>
                         Product Review
                     </a>
                 </div>
             </div>
         </div>

    }
    
</div>