@model MVC.WebUI.Models.ShippingDetails
@{
    ViewBag.Title = "Checkout";
}


<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2>
                Your order information
            </h2>


            <hr />

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()

                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Username</label>
                    <span class="btn btn-outline-danger btn-sm">
                        @User.Identity.Name
                    </span>
                    <div id="emailHelp" class="form-text">

                    </div>
                </div>

                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Address Title</label>
                    @Html.TextBoxFor(x => x.AddressTitle, new { @class = "form-control" })
                    <div id="emailHelp" class="form-text">
                        Please write the address title here.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Address</label>
                    @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                    <div id="emailHelp" class="form-text">
                        Please enter your address here.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">City</label>
                    @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                    <div id="emailHelp" class="form-text">
                        Please enter your city here.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">District</label>
                    @Html.TextBoxFor(x => x.District, new { @class = "form-control" })
                    <div id="emailHelp" class="form-text">
                        Please enter your neighborhood here.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Post Code</label>
                    @Html.TextBoxFor(x => x.PostCode, new { @class = "form-control" })
                    <div id="emailHelp" class="form-text">
                        Please enter your post code here.
                    </div>
                </div>

                <div class="row gy-3">
                    <div class="col-md-6">
                        <label for="cc-name" class="form-label">Name on card</label>
                        <input type="text" class="form-control" id="cc-name" placeholder="" required="">
                        <small class="text-muted">Full name as displayed on card</small>
                        <div class="invalid-feedback">
                            Name on card is required
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label for="cc-number" class="form-label">Credit card number</label>
                        <input type="text" class="form-control" id="cc-number" placeholder="" required="">
                        <div class="invalid-feedback">
                            Credit card number is required
                        </div>
                    </div>

                    <div class="col-md-3">
                        <label for="cc-expiration" class="form-label">Expiration</label>
                        <input type="text" class="form-control" id="cc-expiration" placeholder="" required="">
                        <div class="invalid-feedback">
                            Expiration date required
                        </div>
                    </div>

                    <div class="col-md-3">
                        <label for="cc-cvv" class="form-label">CVV</label>
                        <input type="text" class="form-control" id="cc-cvv" placeholder="" required="">
                        <div class="invalid-feedback">
                            Security code required
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-success mt-3">Submit</button>


            }
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>